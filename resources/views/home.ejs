<section class="hero">
    <div class="container mx-auto flex items-center justify-between">
        <div>
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait!</h1>
            <button class="px-6 py-2 rounded-full test-white font-bold mt-4 btn-primary">Order Now</button>
        </div>
        <div> 
            <img src="/img/momo.jpg" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All momos</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% momos.forEach(function(momo){ %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= momo.image %>">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= momo.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= momo.size %></span>
                    <div class="flex items-center justify-around mt-3">
                        <span class="font-bold text-lg">Rs. <%= momo.price %></span>
                        <button data-momo="<%= JSON.stringify(momo) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>